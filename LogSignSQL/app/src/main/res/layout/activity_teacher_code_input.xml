<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    app:startDestination="@+id/Teachers"
    tools:context=".TeacherCodeInput"
    >

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="276dp"
        android:layout_height="150dp"
        android:layout_marginTop="148dp"
        android:layout_marginBottom="44dp"
        android:src="@drawable/sheshlogo"
        app:layout_constraintBottom_toTopOf="@+id/teacherCodeEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/teacherCodeEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/lavender_border"
        android:textColorHint="@color/black"
        android:hint="Enter Teacher's Code:"
        android:textColor="@color/black"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/baseline_qr_code_scanner_24"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <Button
        android:id="@+id/submitCodeButton"
        android:layout_width="193dp"
        android:layout_height="71dp"

        android:layout_marginTop="28dp"
        android:elevation="8dp"
        android:padding="16dp"
        android:text="Submit"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherCodeEditText"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
