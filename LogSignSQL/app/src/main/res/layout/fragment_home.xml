<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    tools:context=".ui.home.HomeFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

      <androidx.cardview.widget.CardView
          android:id="@+id/firstQuarter"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          app:cardElevation="3dp">

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"

             android:orientation="vertical">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/first" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-50dp"
                android:background="@color/lavender"
                android:gravity="center"
                android:text="1st Quarter"

                android:textSize="22sp"
                android:textStyle="bold" />

         </LinearLayout>

      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/secondQuarter"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          app:cardElevation="3dp">

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"

             android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/second" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-50dp"
                android:background="@color/lavender"
                android:gravity="center"
                android:text="2nd Quarter"

                android:textSize="22sp"
                android:textStyle="bold" />

         </LinearLayout>

      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/thirdQuarter"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          app:cardElevation="3dp">

         <LinearLayout

             android:layout_width="match_parent"
             android:layout_height="match_parent"

             android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/thirds" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-50dp"
                android:background="@color/lavender"
                android:gravity="center"
                android:text="3rd Quarter"

                android:textSize="22sp"
                android:textStyle="bold" />

         </LinearLayout>

      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/fourthQuarter"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          app:cardElevation="3dp">

         <LinearLayout
             android:layout_marginBottom="20dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

             android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/fort" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-50dp"
                android:background="@color/lavender"
                android:gravity="center"
                android:text="4th Quarter"


                android:textSize="22sp"
                android:textStyle="bold" />

         </LinearLayout>

      </androidx.cardview.widget.CardView>



   </LinearLayout>


</ScrollView>